@model TeamFinderDAL.Entities.Lobby

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Lobby</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.About)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.About)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameLocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameLocation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MinNumberOfPlayers)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MinNumberOfPlayers)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaxNumberOfPlayers)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaxNumberOfPlayers)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HostId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HostId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HostedGameId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HostedGameId)
        </dd>



    </dl>

    <br />
    <hr />
    <dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ConnectedUsers)
        </dt>
        @foreach (var user in Model.ConnectedUsers)
        {
            <dd class="col-sm-10">
                @user.UserName
            </dd>
            
        }

    </dl>
   


</div>
<div>
    <a asp-action="LeaveLobby" asp-route-id="@Model.Id">Leave</a>
</div>
