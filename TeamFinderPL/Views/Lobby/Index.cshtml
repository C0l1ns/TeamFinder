@model IEnumerable<TeamFinderDAL.Entities.Lobby>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lobbies</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Lobby" asp-action="Create" class="btn btn-primary">Host Lobby</a>
        </div>
    </div>
    
    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
            <tr>
                <th>Game Name</th>
                <th>Game Date</th>
                <th>Misc</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var lobby in Model)
            {
                <tr>
                    <td width="50%">@lobby.HostedGame.Name</td>
                    <td width="50%">@lobby.GameDate</td>
                    <td>
                        <div>Join</div>
                        <a asp-controller="Lobby" asp-action="Update" asp-route-id="@lobby.Id" class="btn btn-primary">Update</a>
                        <a asp-controller="Lobby" asp-action="Delete" asp-route-id="@lobby.Id" class="btn btn-primary">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>