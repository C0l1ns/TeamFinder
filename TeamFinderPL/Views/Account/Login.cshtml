@model TeamFinderDAL.Models.ViewModels.AccountLoginViewModel
@{
    ViewBag.Title = "Login";
}

<h2 class="my-5 text-center">
    Login Form
</h2>
<div class="my-5">
    <form enctype="multipart/form-data" asp-action="Login" asp-controller="Account" method="post">
        <div class="form-row">
            <div class="form-group col-12">
                <label asp-for="Username"></label>
                <input type="text" class="form-control" asp-for="Username"/>
                <span asp-validation-for="Username" hidden class="small text-danger"></span>
            </div>
        </div>
        
        <div class="form-row">
            <div class="form-group col-12">
                <label asp-for="Password"></label>
                <input class="form-control" asp-for="Password"/>
                <span asp-validation-for="Password" hidden class="small text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-12">
                <label asp-for="RememberMe"></label>
                <input class="custom-checkbox" asp-for="RememberMe"/>
                <span asp-validation-for="RememberMe" hidden class="small text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-12">
                <button type="submit" class="btn btn-primary btn-block"> Sing Up </button>
            </div> <!-- form-group// -->
        </div>
        <div class="text text-danger" asp-validation-summary="All"></div>
    </form>
</div>