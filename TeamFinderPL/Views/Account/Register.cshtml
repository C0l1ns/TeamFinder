@model TeamFinderDAL.Models.ViewModels.AccountRegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2 class="my-5 text-center">
    Registration Form
</h2>
<div class="my-5">
    <form enctype="multipart/form-data" asp-action="Register" asp-controller="Account" method="post">
        <div class="form-row">
            <div class="form-group col-12">
                <label asp-for="Username"></label>
                <input type="text" class="form-control" asp-for="Username"/>
                <span asp-validation-for="Username" hidden class="small text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-12">
                <label asp-for="DisplayUsername"></label>
                <input type="text" class="form-control" asp-for="DisplayUsername"/>
                <span asp-validation-for="DisplayUsername" hidden class="small text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-12">
                <label asp-for="Email"></label>
                <input type="email" class="form-control" asp-for="Email"/>
                <span asp-validation-for="Email" hidden class="small text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-12">
                <label asp-for="Password"></label>
                <input class="form-control" asp-for="Password"/>
                <span asp-validation-for="Password" hidden class="small text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-12">
                <label asp-for="ConfirmPassword"></label>
                <input class="form-control" asp-for="ConfirmPassword"/>
                <span asp-validation-for="ConfirmPassword" hidden class="small text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-12">
                <button type="submit" class="btn btn-primary btn-block"> Sing Up </button>
            </div> <!-- form-group// -->
        </div>
        <div class="text text-danger" asp-validation-summary="All"></div>
    </form>
</div>